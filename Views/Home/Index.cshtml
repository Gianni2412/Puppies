@model PuppiesPet.Models.Contactar

@{

    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
        integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <title>Inicio</title>
    <style>
        a {
            color: white;
            text-decoration: none;
        }

        /*Section0*/
        .section-0 .entrada {
            display: inline-block;
            border-radius: 3em;
            padding: 2vmin 4.5vmin;
            margin: 1em;
            color: whitesmoke;
        }

        .section-0 .entrada1 {
            background: #797D7F;
            opacity: 0.85;
        }

        .section-0 .entrada2 {
            background: #70AD70;
        }

        .section-0 .entrada3 {
            background: #797D7F;
        }

        .section-0 .entrada h3 {
            font-size: 2vmin;
            color: whitesmoke;
        }

        .section-0 .entrada a {
            font-size: 2vmin;
        }

        a:link {
            color: white;
        }

        /* Bienvenidos*/
        .section-1 {
            padding: 10vmin 0vmin;
            color: #64AF8B;
        }

        .section-1 .row .col-md-6 .imagen img {
            opacity: 0.8;
            width: 100%;
            border-radius: 0.2em;
        }

        .section-1 .row .col-md-6:last-child {
            position: relative;
        }

        .section-1 .row .col-md-6 .panel {
            position: absolute;
            top: 4vmin;
            left: -7vmin;
            bottom: 4vmin;
            background: #BAE8D2;
            border-radius: 3px;
            text-align: left;
            padding: 10vmin 5vmin 20vmin 10vmin;
            box-shadow: 0px 25px 42px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .section-1 .row .col-md-6 .panel p {
            font-weight: bolder;
            font-size: 0.9em;
            color: #2C492F;
        }

        /*Servicios*/
        .section-2 .container h1 {
            color: #64AF8B;
        }

        #servicios {
            background-image: url("imagenes/medicos.jpg");
            background-color: rgba(6, 32, 51, .8);
            background-attachment: fixed !important;
            background-position: center center;
            background-repeat: no-repeat;
            background-size: cover;
            padding: 0;
        }

        .parallax-overlay {
            background-color: rgba(6, 32, 51, .8);
            padding: 70px 0;
        }

        .card>img {
            height: 250px;
            opacity: 0.6;

        }

        .card-block {
            background: #B0CDB0;
        }

        .card-block h6 {
            color: #2C492F;
        }

        /*Contacto*/
        .Contactanos {
            background: #417E44;
            color: #2C492F;
            font-weight: bold;
        }

        .Contactanos .titulo {
            color: white;
        }

        .Contactanos button {
            background-color: #B7F8D8;
            font-weight: bold;
        }

        .Contactanos input {
            background-color: #2C492F;
            opacity: 0.35;
        }
    </style>
</head>

<body>

    <section class="section-0 pt-3">

        <div class="platform row">
            <div class="col-md-4 col-sm-8 push-right text-right">
                <div class="entrada entrada1 shadow-lg">
                    <div class="d-flex flex-row justify-content-center">
                        <i class="fas fa-map-marked-alt fa-3x py-2 pr-3"></i>
                        <div class="text text-left">
                            <h3 class="pt-1 m-0">Visítanos</h3>
                            <a asp-action="Contacto" asp-controller="Home" class="p-0 m-0">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-8 push-center text-center">
                <div class="entrada entrada2 shadow-lg">
                    <div class="d-flex flex-row justify-content-center">
                        <i class="fas fa-building fa-3x py-2 pr-3"></i>
                        <div class="text text-left">
                            <h3 class="pt-1 m-0">Trabaja con Nosotros</h3>
                            <a asp-action="Trabaja" asp-controller="Home" class="p-0 m-0">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-8 pull-left text-left">
                <div class="entrada entrada3 shadow-lg">
                    <div class="d-flex flex-row justify-content-center">
                        <i class="fas fa-dog fa-3x py-2 pr-3"></i>
                        <div class="text text-left">
                            <h3 class="pt-1 m-0">Adoptame</h3>
                            <a asp-action="Adopciones" asp-controller="Home" class="p-0 m-0">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Bienvenidos-->
    <section class="section-1">
        <div class="container text-center">
            <h1>Bienvenidos a la Clínica Veterinaria Puppies Pet <i class="fas fa-paw"></i></h1><br>
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="imagen">
                        <img src="imagenes/perroygato.jpg" alt="Perros" class="" />
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="panel text-left">
                        <p>
                            Dedicados a la Medicina y cirugía desde su fundación, fue conocida por el desarrollo de
                            nuevas técnicas y herramientas quirúrgicas y de rehabilitación, que permitieron ser una
                            Clínica Veterinaria referente en el País y diferenciarse con propuestas innovadoras, como
                            fue la silla de ruedas para mascotas....
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Servicios-->
    <section id="servicios" class="section-2">
        <div class="parallax-overlay ">
            <div class="container text-center">
                <h1>Nuestros Servicios</h1><br>
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-lg-3">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="imagenes/serviciosgenerales.jpg">
                            <div class="card-block">
                                <div class="card-title text-center">
                                    <h6>Servicios Generales</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="imagenes/groomingpets.jpg">
                            <div class="card-block">
                                <div class="card-title text-center">
                                    <h6>Grooming Pet</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="imagenes/Examenes.png">
                            <div class="card-block">
                                <div class="card-title text-center">
                                    <h6>Examenes Complementarios</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <img class="card-img-top img-fluid" src="imagenes/Farmacia.jpg">
                            <div class="card-block">
                                <div class="card-title text-center">
                                    <h6>FarmaciaPet</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Contantanos-->
    <section class="Contactanos">
        <div class="container mt-5 mb-5">
            <div class="row">
                <div class="col-md offset2-md-2">
                    <div class="_blogcard mt-5">
                        <div class="row">
                            <div class="col-lg-7 col-md-12 col-sm-12">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!--Imagen-->
                                        <img src="imagenes/Contactanos.jpg" alt="" class="img-fluid">
                                    </div>
                                </div>
                            </div>



                            <div class="col-lg-5 col-md-12 col-sm-12">
                                <!--Contenido-->
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <p class="mb-0 font-weight-bold">Si tienes alguna consulta</p>
                                        <div class=" titulo pt-0 font-weight-bold">Contactanos</div>
                                        <div class="form text-left pt-3">


                                            <!--Contactanos-->
                                            <form asp-controller="Home" asp-action="CrearContacto">
                                                <label asp-for="Nombres" class="control-label">Nombre y
                                                    Apellido
                                                    del Dueño:</label>
                                                <input asp-for="Nombres" type="text" class="form-control"
                                                    placeholder="Ej:Luis Vargas">


                                                <label asp-for="NombreMascota" class="control-label">Nombre de la
                                                    mascota:</label>
                                                <input asp-for="NombreMascota" type="text" class="form-control"
                                                    placeholder="Ej:Koki">



                                                <label asp-for="CorreoElectronico" class="control-label">Correo
                                                    Electrónico:</label>
                                                <input asp-for="CorreoElectronico" type="email" class="form-control"
                                                    placeholder="luis@example.com">


                                                <label asp-for="Asunto" class="form-label">Asunto:</label>
                                                <input asp-for="Asunto" type="text" class="form-control"
                                                    placeholder="luis@example.com">


                                                <div class=" form-group enviar pt-3 pb-3 text-center ">
                                                    <button type="submit" class="btn">Enviar</button>
                                                </div>

                                            </form>
                                            <h1>@ViewData["Message"]</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



</body>

</html>
