@model PuppiesPet.Models.Producto

@{
    ViewData["Title"] = "Registro de Producto";
}

<h1>Registro de Producto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenName" class="control-label"></label>
                <input asp-for="ImagenName" class="form-control" />
                <span asp-validation-for="ImagenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" >
                     <option value="A">Disponible</option>
                     <option value="I">No disponible</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="RegistrarProducto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
