@model PuppiesPet.Models.Producto
@{
    ViewData["Title"] = "Registrar Producto";
}
<h1>@ViewData["Title"]</h1>


@{
    if(ViewBag.mensajeGrabarProducto != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@ViewBag.mensajeGrabarProducto</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    }
}

<form asp-action="RegProducto">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Nombre" class="control-label">Nombre del Producto</label><br/>
    <input asp-for="Nombre" class="form-control"/><br/>
    <span asp-validation-for="Nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Cantidad" class="control-label"></label><br/>
    <input asp-for="Cantidad" class="form-control"/><br/>
    <span asp-validation-for="Cantidad" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="ImagenName" class="control-label">Imagen</label><br/>
    <input type="file" asp-for="ImagenName" class="form-control" accept="image/jpeg, image/gif"/>
    
    <br/>
  </div>
 <div class="form-group">
 		<img src="@ViewBag.Imagen" width="350" height="200">
  </div>
  <div class="form-group">
    <label asp-for="Precio" class="control-label"></label><br/>
    <input asp-for="Precio" class="form-control-sm"/><br/>
  </div>
  
  <input type="submit" value="Grabar" class="btn btn-primary" />
</form>
<h1> 
   <!--@Html.DisplayNameFor(model => model.Mensaje)-->
    @Html.DisplayFor(model => model.Mensaje)
</h1>