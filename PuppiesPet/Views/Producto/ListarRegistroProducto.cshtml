@model IEnumerable<PuppiesPet.Models.Producto>

@{
    ViewData["Title"] = "Producto";
}

<h1>Lista de Productos</h1>

<p>
    <a asp-action="RegistrarProducto">Registrar Nuevo Producto</a>
</p>
<table class=" table table-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenName)
            </th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <div><img src=~/imagenes/@item.ImagenName style="widht:100px;height:100px;" /></div>
                </td>
                <td>
                    <a asp-action="EditarProducto" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="DetalleProducto" asp-route-id="@item.Id">Detalle</a> |
                    <a asp-action="BorrarProducto" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
