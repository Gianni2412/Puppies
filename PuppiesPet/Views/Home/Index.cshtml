@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr"
    crossorigin="anonymous">
    <title>Inicio</title>
    <style>
        /*Section0*/
        .section-0 .entrada {
            background: #70AD70;
            display: inline-block;
            border-radius: 3em;
            padding: 2vmin 4.5vmin;
            margin: 1em;
            color: whitesmoke;
        }
        .section-0 .entrada h3 {
            font-size: 2vmin;
            color: whitesmoke;
        }

        .section-0 .entrada a {
            font-size: 2vmin;
        }
        a:link{
            color: white;
        }

    </style>
</head>
<body>
    <!--Carousel-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/imagenes/clinica.jpg" class="d-block w-100" alt="..." width="620px" height="450px">
                        </div>
                        <div class="carousel-item">
                            <img src="~/imagenes/emergencia.jpg" class="d-block w-100" alt="..." width="620px" height="450px">
                        </div>
                        <div class="carousel-item">
                            <img src="~/imagenes/medicos.jpg" class="d-block w-100" alt="..." width="620px" height="450px">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Sección-0-->
     <section class="section-0">
        <div class="platform row">
            <div class="col-md-4 col-sm-8 text-right">
              <div class="entrada shadow-lg">
                <div class="d-flex flex-row justify-content-center">
                  <i class="fas fa-map-marked-alt fa-3x py-2 pr-3"></i>
                  <div class="text text-left">
                    <h3 class="pt-1 m-0">Visítanos</h3>
                    <a href="#" class="p-0 m-0">Ver más</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-8 text-left">
              <div class="entrada shadow-lg">
                <div class="d-flex flex-row justify-content-center">
                  <i class="fas fa-building fa-3x py-2 pr-3"></i>
                  <div class="text text-left">
                    <h3 class="pt-1 m-0">Practica con Nosotros</h3>
                    <a href="#" class="p-0 m-0">Ver más</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-8 text-left">
                <div class="entrada shadow-lg">
                  <div class="d-flex flex-row justify-content-center">
                    <i class="fas fa-dog fa-3x py-2 pr-3"></i>
                    <div class="text text-left">
                      <h3 class="pt-1 m-0">Adoptame</h3>
                      <a href="#" class="p-0 m-0">Ver más</a>
                    </div>
                  </div>
                </div>
              </div>
          </div>
    </section>

    
    
       

</body>

</html>
