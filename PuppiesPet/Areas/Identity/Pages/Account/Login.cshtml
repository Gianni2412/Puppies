@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <title>@ViewData["Title"] PuppiesPet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/estilos.css" />


</head>

<body>

    <section>
        <div class="imgBx">
            <img src="https://www.wallpapertip.com/wmimgs/30-309223_cute-cat-full-hd-1080p-wallpaper-data-src.jpg">

        </div>

        <div class="contentBx">

            <div class="formBx">
                <h2>Iniciar Sesion</h2>
                <form id="account" method="post">

                    <div class="inputBx">

                        <span>Correo Electronico</span>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="inputBx">
                        <span>Contraseña</span>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>


                    <div class="remember">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>

                    </div>


                    <div class="inputBx">
                        <input type="submit" value="Ingresar" name="">

                    </div>

                    <div class="inputBx">
                        <p>¿Eres nuevo? <a asp-controller="Usuario" asp-action="Registro">Registrate</a></p>
                    </div>

                </form>

                <h1>Siguenos</h1>
                <ul class="sci">
                    <li> <i class="bi bi-facebook"></i></li>
                    <li> <i class="bi bi-instagram"></i></li>
                    <li> <i class="bi bi-linkedin"></i></li>


                </ul>

            </div>


        </div>




    </section>














</body>

</html>





@section Scripts {
<partial name="_ValidationScriptsPartial" />
}